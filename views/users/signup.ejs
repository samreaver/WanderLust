<% layout("/layouts/boilerplate") %>


<form action="/signup" method="POST" class="needs-validation" novalidate>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input type="text" name="user[username]" id="username" placeholder="Username" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
    </div>
    
    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" name="user[email]" id="email" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="user[password]" id="password" class="form-control" required />
        <div class="valid-feedback">Looks good!</div>
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
</form>
